<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custodian"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/actiview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorwehite"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imag_retur"
            android:paddingLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/returnlogin"
            />
        <TextView
            android:id="@+id/phonregister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="@string/app_custodian"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_custodian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorwehite"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_custod"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" 
            android:src="@mipmap/call"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_custod"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
           />
        <com.example.administrator.mapclient.view.AudioRecorderButton
            android:id="@+id/butt_custodian"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_recorder_normal"
            android:gravity="center"
            android:text="@string/app_butt_custodian"
            android:textColor="#727272" >
        </com.example.administrator.mapclient.view.AudioRecorderButton>
        <ImageView
            android:id="@+id/image_custod_ret"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/adj"
            />
    </LinearLayout>
</RelativeLayout>
