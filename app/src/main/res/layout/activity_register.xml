<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/actiview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorwehite"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/returlogin"
            android:paddingLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="match_parent" 
            android:src="@mipmap/returnlogin"
            />
        <TextView
            android:id="@+id/phonregister"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="@string/app_phonregister"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tex"
        android:layout_below="@+id/actiview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"/>
    <LinearLayout
        android:id="@+id/topimag"
        android:layout_below="@+id/tex"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center">
        <com.example.administrator.mapclient.view.RoundImageView
            android:id="@+id/nickimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/nickimg" />
    </LinearLayout>
    <TextView
        android:id="@+id/tex12"
        android:layout_below="@+id/topimag"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"/>
<LinearLayout
    android:id="@+id/reiderus"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/tex12"
    android:layout_width="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/shapes"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:id="@+id/phonick" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <EditText
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:background="@null"
        android:hint="验证码"
        android:id="@+id/auth_code" />
        <Button
            android:id="@+id/butt_code"
            android:layout_weight="1.15"
            android:layout_width="0dp"
            android:textColor="@color/colorwehite"
            android:layout_height="wrap_content" 
            android:text="获取验证码"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="1dp"
            android:background="@color/colorgray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.15"
            android:layout_height="1dp"
            android:background="@color/colorwehite"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:background="@null"
        android:inputType="textPassword"
        android:hint="@string/app_printpasw"
        android:id="@+id/register_pasw" />
</LinearLayout>
    <Button
        android:layout_below="@+id/reiderus"
        android:layout_width="match_parent"
        android:textSize="20dp"
       android:layout_margin="20dp"
        android:text="注册"
        android:background="@drawable/rigtershapes"
        android:textColor="@color/colorwehite"
        android:layout_height="wrap_content"
        android:id="@+id/butt_register" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="用户协议"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
